<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/color3"
    app:cardCornerRadius="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_home"
            android:fontFamily="@font/iran_yekan_bold"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/color4"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iran_yekan_regular"
            android:text="@string/toast_message"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:textColor="@color/color2"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message"
            android:fontFamily="@font/iran_yekan_medium"
            android:layout_margin="8dp"
            android:textColor="@color/color4"
            android:inputType="number"
            android:layout_marginTop="8dp"/>


        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="?selectableItemBackground"
            android:fontFamily="@font/iran_yekan_black"
            android:textColor="@color/color2"
            android:text="@string/pushpole_imei_dialog_accept"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/number" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:fontFamily="@font/iran_yekan_black"
            android:textColor="@color/project_red"
            android:text="@string/cancel"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/number"
            app:layout_constraintLeft_toRightOf="@id/ok"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>